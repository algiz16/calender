<div class= "container mt-5 text-center">
  <h1>Calendar</h1>
  <!-- <%= month_calendar() do |date| %>
    <div class = "day">
      <%= date.day %>
    </div>
  <% end %>
  -->
  <!-- <%= turbo_frame_tag 'calendar' do %> -->
  <%= month_calendar(events: @episodes) do |date, episodes| %>
    <%= date.day %>
    <% episodes.each do |episode| %>
      <% if current_user == episode.user %>
        <div class="card-header" >
          <div class="card-title">
            <%= link_to episode.title, episode %>
          </div>
        </div>
        <div class="card-body" >
          <p class="card-text">
            <%= episode.description %>
          </p>
        </div>
        <div class="card-footer" >
          <p class="card-text">
            From: <%= episode.start_time.strftime("%A, %d %B at %I:%M %p") %>
          </p>
          <p class="card-text">
            To: <%= episode.end_time.strftime("%A, %d %B at %I:%M %p") %>
          </p>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <!-- <% end %> -->
</div>
